{
  "ConnectionStrings": {
    "DefaultConnection": "Server=your-production-db-server;Database=OrangeSiteInspectorDb;User Id=your-db-user;Password=your-db-password;TrustServerCertificate=True;"
  },
  "JwtSettings": {
    "SecretKey": "YOUR_PRODUCTION_SECRET_KEY_SHOULD_BE_AT_LEAST_32_CHARS",
    "Issuer": "OrangeSiteInspector",
    "Audience": "OrangeSiteInspector",
    "ExpirationInMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": ["https://your-production-frontend-domain.com"]
  }
}
